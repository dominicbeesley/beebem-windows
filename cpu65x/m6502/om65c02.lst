brk_c_imp
	if(irq_taken || nmi_state) {
		read(PC);
	} else {
		read(PC++);
	}
	write(SP, PC >> 8);
	dec_SP();
	write(SP, PC);
	dec_SP();
	write(SP, irq_taken || nmi_state ? P & ~F_B : P);
	dec_SP();
	if(irq_taken && nmi_state) {
		PC = read(0xfffa);
		PC = set_h(PC, read(0xfffb));
		nmi_state = false;
		standard_irq_callback(NMI_LINE);
	} else {
		PC = read(0xfffe);
		PC = set_h(PC, read(0xffff));
		if(irq_taken) {
			standard_irq_callback(IRQ_LINE);
		}
	}
	irq_taken = false;
	P = (P | F_I) & ~F_D; // Do *not* move after the fetch
	fetch();

